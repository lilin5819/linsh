}

function fvi() {
    #if [[ $# -lt 1 ]]; then
        #file=`fzf`
    #else
        #file=`fzf -q "$*"`
    #fi
    file=`Fzf $@`
    [ -z $file ] && return 1
    vim $file
}

function fvid() {
    [ $# -lt 1 ] && echo "Usage $0 [anotherDir]" && return 1
    nextDir=$1
    if [[ $# -lt 2 ]]; then
        file="`fzf`"
    else
        shift
        file=`fzf -q "$*"`
    fi
    [ -z $file ] && return 1
    nextFile="${nextDir}/${file}"
    vimdiff $file $nextFile 
}

function fvidf() {
    file1="`fzf`"
    file2="`fzf`"
    [ -z $file1 ] || [ -z $file2 ] && return 1
    vimdiff $file1 $file2
}

