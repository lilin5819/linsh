function Fzf() {
    if [[ $# -lt 1 ]]; then
        file=`fzf`
    else
        file=`fzf -q "$*"`
    fi
    echo $file
}


function fcd() {
#    if [[ $# -lt 1 ]]; then
        #file=`fzf`
    #else
        #file=`fzf -q "$*"`
#    fi
    file=`Fzf $@`
    dir="`dirname $file`"
    [ -d $dir ] && cd $dir
}

#alias cdf='`fzf` | dirname |xargs cd'
